<div class="container"> 
  <div class = "row justify-content-center">
    <div class = "col-10">
      <%= render "shared/errors" %>
      <%= form_with(model: @article, local: true) do |f| %> 
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %> 
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %> 
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-success"%>
        </div>
      <%end%>
    </div>
    <p class = "text-center"><%= link_to  "Cancel and return to article listing", articles_path%></p>
  </div>
</div>