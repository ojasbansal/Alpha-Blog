<div class="container"> 
  <div class = "row justify-content-center mt-4">
    <div class = "col-10">
      <%= render "shared/errors", obj: @user %>
      <%= form_with(model: @user, local: true) do |f| %> 
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label" %> 
          <div class="col-10">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label" %> 
          <div class="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter you email" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label" %> 
          <div class="col-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Choose your password" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-success") %>
        </div>
      <%end%>
    </div>
    <p class = "text-center"><%= link_to  "Cancel and return to article listing", articles_path%></p>
  </div>
</div>